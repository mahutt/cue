<!DOCTYPE html>
<html>
    <%- include('../partials/head', {title: 'All Courses'}) %>
    <body>
        <h1><%= deck.name %></h1>
        <h2>Cards:</h2>
        <style>
            .cards {
                display: flex;
                flex-direction: column;
                max-width: 600px;
                gap: 1rem;
            }
            .card {
                display: flex;
                flex-direction: row;
                flex-wrap: nowrap;
                gap: 1rem;
                padding: 1rem;
                border-radius: 0.5rem;
            }
            .card:hover {
                background-color: lightgray;
            }
            .question,
            .answer {
                flex: 1;
                /* max-width: 50%; */
            }
        </style>
        <div class="cards">
            <% cards.forEach(function(card) { %> <%- include('../card/preview',
            { card: card }) %> <% }) %>
        </div>
        <h2>Create a new card:</h2>
        <form
            class="card-form"
            hx-post="/cards"
            hx-trigger="submit"
            hx-target=".cards"
            hx-swap="beforeend"
            hx-on::after-request="this.reset()"
        >
            <input
                type="hidden"
                id="deck"
                name="deck"
                value="<%= deck._id %>"
            />

            <label for="question">Question:</label>
            <textarea id="question" name="question" required></textarea>

            <label for="answer">Answer:</label>
            <textarea id="answer" name="answer" required> </textarea>

            <button type="submit">Create</button>
        </form>
        <script
            type="module"
            src="/javascripts/components/clipboardLink.component.js"
        ></script>
    </body>
</html>
