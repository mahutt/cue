<!DOCTYPE html>
<html>
    <%- include('../partials/head', {title: deck.name}) %>
    <body>
        <style>
            .deck-body {
                height: 100dvh;
                display: grid;
                grid-template-rows: 2fr 1fr;
            }
            .cards {
                overflow-y: auto;
                padding: 1rem;
            }
            .card-form-wrapper {
                box-shadow: 0 2px 45px rgba(0, 0, 0, 0.1);
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 1rem;
            }
            .card-form {
                display: flex;
                flex-direction: column;
                align-items: flex-start;
            }
        </style>

        <div class="deck-body">
            <div class="cards">
                <%- include('./title', {deck: deck}) %> <% cards.forEach(function(card) { %> <%-
                include('../card/preview', { card: card }) %> <% }) %>
            </div>

            <% if (belongs) { %>
            <div class="card-form-wrapper">
                <div class="card-form">
                    <h2>Create a new card:</h2>
                    <card-form class="card" deck_id="<%= deck.id %>"></card-form>
                    <h2>Danger</h2>
                    <delete-resource resource="decks" id="<%= deck.id %>">Delete Deck</delete-resource>
                </div>
            </div>
            <% } %>
        </div>

        <script type="module" src="/javascripts/components/clipboardLink.component.js"></script>
    </body>
</html>
