<style>
    #content {
        padding: 0 1rem 1rem 1rem;
    }
</style>
<menu-options><%- include('./settings', { belongs, course }) %></menu-options>
<%- include('./title', {course: course}) %>
<div class="title">Decks:</div>
<div class="decks"><% decks.forEach(function(deck) { %> <%- include('../deck/preview', { deck: deck }) %> <% }) %></div>
<% if (belongs) { %>
<h2>Create a new deck:</h2>
<deck-form>
    <label for="name">Deck Name:</label>
    <input type="text" id="name" required maxlength="100" />
    <br />

    <input type="hidden" id="course-id" value="<%= course.id %>" />

    <button type="submit">Create Deck</button>
</deck-form>
<% } %>
