<style>
    #content {
        padding: 0 1rem 1rem 1rem;
    }
</style>
<menu-options>
    <logout-button class="btn btn-light">Logout</logout-button>
</menu-options>
<div class="container">
    <div class="title mb-2"><%= user.name %></div>
    <div>
        <div class="mb-2 mx-1 d-flex flex-row justify-content-between align-items-center">
            <div class="text-secondary">Courses</div>
            <div><% if (belongs) { %> <%- include('./course/form') %> <% } %></div>
        </div>
        <div class="courses">
            <% courses.forEach(function(course) { %> <%- include('./course/preview', { username: user.name, course:
            course }) %> <% }) %>
        </div>
    </div>
</div>
